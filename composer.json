{
    "name": "innoraft/drupal-quality-checker",
    "description": "Setups code quality checking tools for Drupal project.",
    "license": "MIT",
    "type": "project",
    "keywords": [
        "git",
        "hooks",
        "quality"
    ],
    "authors": [
        {
            "name": "Kunal Singh",
            "role": "Maintainer"
        }
    ],
    "support": {
        "issues": "https://github.com/innoraft/drupal-quality-checker/issues",
        "source": "https://github.com/innoraft/drupal-quality-checker"
    },
    "require": {
        "drupal/coder": "^8.3",
        "ergebnis/composer-normalize": "^2.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpro/grumphp": "^1.13",
        "sebastian/phpcpd": "^6.0"
    },
    "config": {
        "allow-plugins": {
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true
        }
    }
}
